<Window x:Class="BLFClient.BLFServerConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BLFClient"
        mc:Ignorable="d"
        Title="BLF Server Configuration" Height="122.165" Width="221.134">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="BLF Server IP"/>
            <TextBox Name="ServerIP"/>
            <Label Content="BLF server port"/>
            <TextBox Name="ServerPort"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button Content="Ok" Click="Button_Click_OK"/>
            <Button Content="Cancel" Click="Button_Click_Cancel"/>
        </StackPanel>
    </Grid>

</Window>
